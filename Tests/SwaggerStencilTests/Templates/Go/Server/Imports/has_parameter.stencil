    schema_string.stencil
    items_string.stencil
#}

{# Helper Macros #}

{% macro isParameterHelper parameter type %}
{% set location %}{{ parameter.other.fixedFields.location }}{% endset %}
{% if location == type %}
true
{% endif %}
{% endmacro %}

{% macro isParameter either type %}
{% if either.a %}
{% call isParameterHelper either.a type %}
{% else %}
{% call isParameterHelper either.b.structure type %}
{% endif %}
{% endmacro %}

{% macro hasParameter operation type %}
{% for either in operation.parameters %}
{% set isType %}{% call isParameter either type %}{% endset %}
{% if isType %}
true
{% endif %}
{% endfor %}
{% endmacro %}
