{% macro schemaDescription schema %}
{% if schema.structure %}{% call schemaDescription schema.structure.structure %}
{% elif schema.object %}{{ schema.object.metadata.description }}
{% elif schema.array %}{% if schema.array.items.one %}{{ schema.array.metadata.description }}{% endif %}
{% elif schema.string %}{{ schema.string.metadata.description }}
{% elif schema.number %}{{ schema.number.metadata.description }}
{% elif schema.integer %}{{ schema.integer.metadata.description }}
{% elif schema.boolean %}{{ schema.boolean.metadata.description }}
{% else %}
UNIMPLEMENTED
{% endif %}
{% endmacro %}